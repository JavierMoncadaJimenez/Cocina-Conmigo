<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.javi.cocinaconmigo.AniadirRecetaActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.javi.cocinaconmigo.AniadirRecetaActivity">

        <EditText
            android:id="@+id/etCuerpoReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etIngredientesRecetaAniadir"
            android:layout_alignStart="@+id/etIngredientesRecetaAniadir"
            android:layout_below="@+id/etIngredientesRecetaAniadir"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fadeScrollbars="true"
            android:hint="Instruciones"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:keepScreenOn="true"
            android:lines="5"
            android:nestedScrollingEnabled="true" />

        <EditText
            android:id="@+id/etIngredientesRecetaAniadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etTituloReceta"
            android:layout_alignStart="@+id/etTituloReceta"
            android:layout_below="@+id/etTituloReceta"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Ingredientes"
            android:inputType="textMultiLine"
            android:lines="5" />

        <EditText
            android:id="@+id/etTituloReceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/textView11"
            android:layout_toRightOf="@+id/textView11"
            android:ems="10"
            android:hint="Titulo"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etCuerpoReceta"
            android:layout_marginTop="22dp"
            android:onClick="selecionarFoto"
            app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etTituloReceta"
            android:layout_alignBottom="@+id/etTituloReceta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="TÃ­tulo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etIngredientesRecetaAniadir"
            android:layout_alignBottom="@+id/etIngredientesRecetaAniadir"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:text="Ingredientes"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etCuerpoReceta"
            android:layout_alignBottom="@+id/etCuerpoReceta"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:text="Instrucciones"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivAniadirReceta"
            android:layout_alignRight="@+id/ivAniadirReceta"
            android:layout_below="@+id/ivAniadirReceta"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="34dp"
            android:onClick="subirDatos"
            android:text="subir" />

        <ImageView
            android:id="@+id/ivAniadirReceta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:layout_below="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/dafault" />

    </RelativeLayout>

</ScrollView>
